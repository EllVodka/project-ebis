<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:project_ebis.Model"
             xmlns:vm="clr-namespace:project_ebis.ViewModel"
             x:DataType="vm:DashboardViewModel"
             x:Class="project_ebis.View.MainPage"
             Title="Dashboard">

    <Grid RowDefinitions="2*,*,*"
          ColumnDefinitions="*,*,*">
        
        <CollectionView ItemsSource="{Binding elementFiables}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:ElementFiable">
                    <VerticalStackLayout>
                        <HorizontalStackLayout>
                            <Label Text="{Binding NomElement, StringFormat='Nom element : {0}'}"/>
                            <Label Text="{Binding NbIncident, StringFormat=' - Nb incident : {0}'}"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <CollectionView Grid.Column ="1" ItemsSource="{Binding elementDefecteux}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:ElementDefecteux">
                    <VerticalStackLayout>
                        <HorizontalStackLayout>
                            <Label Text="{Binding NomElement, StringFormat='Nom element : {0}'}"/>
                            <Label Text="{Binding NbIncident, StringFormat=' - Nb incident : {0}'}"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <CollectionView Grid.Column="2"
                  ItemsSource="{Binding Bornes}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:Borne">
                    <HorizontalStackLayout>
                        <HorizontalStackLayout.GestureRecognizers>
                            <TapGestureRecognizer
                                 Command="{Binding Source={RelativeSource 
                                AncestorType={x:Type vm:DashboardViewModel}},
                                Path=GoToBorneCommand}"
                                CommandParameter="{Binding .}"/>
                        </HorizontalStackLayout.GestureRecognizers>
                        <Label Text="{Binding NomSecteur}"
                               Padding="10"
                           TextColor="White"/>
                        <Label Text="{Binding NomStation}"
                                Padding="10"
                           TextColor="White"/>
                        <Label Text="{Binding IdBorne, StringFormat='Borne-{0}'}"
                                Padding="10"
                           TextColor="White"/>
                    </HorizontalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <BoxView Grid.Row="1"
                 Grid.RowSpan="2"
                 Color="MediumPurple"/>
        
        <BoxView Grid.RowSpan="2"
                 Grid.Column="1"
                 Grid.Row="1"
                 Color="BlanchedAlmond"/>

        <Button Grid.Row="1"
                Grid.Column="2"
                Text="Afficher les journaux d'entretiens"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                TextColor="White"
                BackgroundColor="Blue"
                Command="{Binding Source={RelativeSource 
                    AncestorType={x:Type vm:DashboardViewModel}},
                    Path=GoToEntretienCommand}"/>

        <Button Grid.Row="2"
                Grid.Column="2"
                Text="Afficher les journaux d'incidents"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                TextColor="White"
                BackgroundColor="Red"
                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:DashboardViewModel}},
                          Path=GoToJournauxIncidentsCommand}"/>

    </Grid>
</ContentPage>
